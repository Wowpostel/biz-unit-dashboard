# Используем официальный Node.js образ
FROM node:18-alpine

# Создаем рабочую директорию внутри контейнера
WORKDIR /app

# Копируем package.json и устанавливаем зависимости
COPY package.json ./
RUN npm install

# Копируем оставшиеся файлы
COPY . .

# Открываем порт
EXPOSE 3000

# Запуск приложения
CMD ["npm", "start"]